# DeviceMonitorV2 前端环境变量配置示例
# 复制此文件为 .env.local 并根据实际情况修改配置

# ===========================================
# API 服务配置
# ===========================================
# 后端API服务地址
VITE_API_BASE_URL=http://127.0.0.1:8001

# API版本前缀
VITE_API_V1_PREFIX=/api/v1
VITE_API_V2_PREFIX=/api/v2

# ===========================================
# 应用配置
# ===========================================
# 应用标题
VITE_APP_TITLE=设备监控系统

# 应用版本
VITE_APP_VERSION=1.0.0

# 应用描述
VITE_APP_DESCRIPTION=DeviceMonitorV2 设备监控管理系统

# ===========================================
# 开发配置
# ===========================================
# 开发服务器端口
VITE_PORT=3000

# 开发服务器主机
VITE_HOST=127.0.0.1

# 是否自动打开浏览器
VITE_OPEN=true

# ===========================================
# 构建配置
# ===========================================
# 构建输出目录
VITE_BUILD_OUTDIR=dist

# 是否生成源码映射
VITE_BUILD_SOURCEMAP=false

# 是否启用构建分析
VITE_BUILD_ANALYZE=false

# ===========================================
# 路由配置
# ===========================================
# 路由模式 (hash | history)
VITE_ROUTER_MODE=history

# 路由基础路径
VITE_ROUTER_BASE=/

# ===========================================
# 主题配置
# ===========================================
# 默认主题 (light | dark | auto)
VITE_DEFAULT_THEME=light

# 主题色
VITE_PRIMARY_COLOR=#1890ff

# ===========================================
# 功能开关
# ===========================================
# 是否启用国际化
VITE_ENABLE_I18N=true

# 是否启用PWA
VITE_ENABLE_PWA=false

# 是否启用Mock数据
VITE_ENABLE_MOCK=false

# 是否启用错误监控
VITE_ENABLE_ERROR_MONITOR=true

# ===========================================
# 第三方服务配置
# ===========================================
# 地图服务API密钥 (可选)
VITE_MAP_API_KEY=

# 统计分析ID (可选)
VITE_ANALYTICS_ID=

# ===========================================
# 开发工具配置
# ===========================================
# 是否启用Vue DevTools
VITE_ENABLE_DEVTOOLS=true

# 是否启用ESLint
VITE_ENABLE_ESLINT=true

# 是否启用TypeScript检查
VITE_ENABLE_TYPE_CHECK=true

# ===========================================
# 性能配置
# ===========================================
# 是否启用代码分割
VITE_ENABLE_CODE_SPLIT=true

# 是否启用Gzip压缩
VITE_ENABLE_GZIP=true

# 是否启用CDN
VITE_ENABLE_CDN=false

# CDN基础URL
VITE_CDN_BASE_URL=

# ===========================================
# 安全配置
# ===========================================
# 是否启用HTTPS (开发环境)
VITE_HTTPS=false

# CSP配置 (可选)
VITE_CSP_POLICY=

# ===========================================
# 日志配置
# ===========================================
# 日志级别 (debug | info | warn | error)
VITE_LOG_LEVEL=info

# 是否启用控制台日志
VITE_ENABLE_CONSOLE_LOG=true